<Window x:Class="WordamentPractice.Views.BoardGenerationQualityFactorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Board Generation Quality Factor"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">
  <StackPanel Orientation="Horizontal" Margin="15">
    <TextBox Name="BoardGenerationQualityFactorTextBox" MinWidth="100" ToolTip="The number of empty tiles * the BGQF determines how many boards are randomly generated (and solved) when pressing Start. Out of those boards, the one with the most words is used to fill in the empty tiles."/>
    <WrapPanel HorizontalAlignment="Right" Margin="20,0,0,0">
      <Button Name="OkButton" Click="OkButton_Click" IsDefault="True" MinWidth="60" Margin="0,0,10,0" Content="_OK"/>
      <Button IsCancel="True" MinWidth="60" Content="_Cancel"/>
    </WrapPanel>
  </StackPanel>
</Window>
